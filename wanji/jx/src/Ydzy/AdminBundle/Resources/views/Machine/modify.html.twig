<script>

var timeoutId = 0;
var allowInput = 0;

function fillMerchantInfo()
{
	var machine_id = $('#machine_id').val();
	var json = {
				machine_id:machine_id
			};

	ajaxPost(
		'app_dev.php/api/machine/info',
		json,
		function(data, textStatus){
		    var mark  = data.mark;
			$('#mark').val(mark);
			var recommend = data.recommend;
			$('#machine_name').val(data.machine_name);
			$('#brand').val(data.brand_name);
			$('#model').val(data.model);
			$('#description').val(data.description);
			$('#workhours').val(data.workhours);
			$('#tonn').val(data.tonn);
			if(recommend==0){
			$('#do_freeze').text('推荐');
			}else{
			$('#do_freeze').text('取消推荐');
			}
			if(mark==-3||mark==-2){
			$('#do_shutdown').text('上线');
			}else{
			$('#do_shutdown').text('下线');
			}
			
			if(mark==0||mark==2||mark==-2){
			$('#tr_sale_price').hide();
			}else if(mark==1||mark==3||mark==-3){
			$('#tr_rent_by_num').hide();
			$('#tr_rent_by_month').hide();
			}
			$('#sale_price').val(data.sale_price);
			$('#rent_by_month').val(data.rent_by_month);
			$('#rent_by_num').val(data.rent_by_num);
			
			
			
			
		},
		function(XMLHttpRequest, textStatus, errorThrown){
			alert("出现错误，稍后请重试");
		}
	);
}

function doPost(){
 	if (confirm("确定提交吗？")){
		var json = {
				machine_id:$('#machine_id').val(),
				machine_name:$('#machine_name').val(),
				workhours:$('#workhours').val(),
				tonn:$('#tonn').val(),
				description:$('#description').val(),
				rent_by_month:$('#rent_by_month').val(),
				rent_by_num:$('#rent_by_num').val(),
				sale_price:$('#sale_price').val(),
				brand_model:$('#brand_model').val()
			  };
		ajaxPost(
			'app_dev.php/api/machine/update',
			json,
			function(data, textStatus){
			    alert("保存成功");
				window.location.href="search";
			},
			function(XMLHttpRequest, textStatus, errorThrown){
				alert("保存失败，请刷新重试");
			}
		);
	}
}

function doFreeze(){
 	if (confirm("确定提交吗？")){
		var json = {
				machine_id:$('#machine_id').val()
				};
		ajaxPost(
			'app_dev.php/api/machine/recommend',
			json,
			function(data, textStatus){
			    alert("设置成功");
				window.location.href="search";
			},
			function(XMLHttpRequest, textStatus, errorThrown){
				alert("设置失败，请刷新重试");
			}
		);
	}
}


function doDelete(){
	if (confirm("确定删除吗？")){
		var json = {
				machine_id:$('#machine_id').val()
				};
		ajaxPost(
			'app_dev.php/api/machine/del',
			json,
			function(data, textStatus){
			    alert("删除成功");
				window.location.href="search";
			},
			function(XMLHttpRequest, textStatus, errorThrown){
				alert("删除失败，请刷新重试");
			}
		);
	}
	
}

function doShutdown(){
	if (confirm("确定提交吗？")){
	var mark = $('#mark').val();
	var flag = (mark==0||mark==2)?"-2":((mark==1||mark==3)?"-3":(mark==-2?"0":"1"));
	
		var json = {
				machine_id:$('#machine_id').val(),
				mark:flag
				};
		ajaxPost(
			'app_dev.php/api/machine/update',
			json,
			function(data, textStatus){
			    alert("设置成功");
				window.location.href="search";
			},
			function(XMLHttpRequest, textStatus, errorThrown){
				alert("设置失败，请刷新重试");
			}
		);
	}
	
}

$(function(){
	fillMerchantInfo();
});

</script>
