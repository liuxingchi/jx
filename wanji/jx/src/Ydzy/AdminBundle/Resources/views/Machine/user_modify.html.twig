<script>

var timeoutId = 0;
var allowInput = 0;

function fillMerchantInfo()
{
  showHint($('#hint'), 'msg', '正在获取信息，请稍候……', 0);
	var uid = $('#uid').val();
	var json = {
				uid:uid
			};

	ajaxPost(
		'app_dev.php/userprofilebyid',
		json,
		function(data, textStatus){
		    showHint($('#hint'), 'msg', '获取信息成功', 0);
		    var mark  = data.mark;
			$('#mark').val(mark);
			var category = data.category_id;
			var brand = data.brand_id;
			$('#truename').val(data.truename);
			$('#count').val(data.count);
			$('#limit').val(data.limit);
			$('#phone').val(data.phone);
			$('#area').val(data.area);
				
		},
		function(XMLHttpRequest, textStatus, errorThrown){
			alert("出现错误，请刷新重试");
		}
	);
}

function doPost(){
 	if (confirm("确定提交吗？")){
		var json = {
				uid:$('#uid').val(),
				area:$('#area').val(),
				limit:$('#limit').val()
			  };
		ajaxPost(
			'app_dev.php/changeprofilebyid',
			json,
			function(data, textStatus){
			    alert("保存成功");
				window.location.href="manage_role";
			},
			function(XMLHttpRequest, textStatus, errorThrown){
				alert("保存失败，请刷新重试");
			}
		);
	}
}


function doDelete(){
	if (confirm("确定删除吗？")){
		var json = {
				machine_id:$('#machine_id').val()
				};
		ajaxPost(
			'app_dev.php/api/machine/predel',
			json,
			function(data, textStatus){
			    alert("删除成功");
				window.location.href="mysearch";
			},
			function(XMLHttpRequest, textStatus, errorThrown){
				alert("删除失败，请刷新重试");
			}
		);
	}
	
}
	

$(function(){
	fillMerchantInfo();
});

