						case '0':
							return 'color:blue;';
							break;
						case '2':
							return 'color:green;';
							break;
						case '3':
							return 'color:blue;';
							break;
						default:
							return 'color:grey;';
							break;
					}
				},
				formatter:function(value,row,index){
					switch (value){
						case '1':
							return '出售';
							break;
						case '0':
							return '出租';
							break;
						case '2':
							return '出租';
							break;
						case '3':
							return '出售';
							break;
						default:
