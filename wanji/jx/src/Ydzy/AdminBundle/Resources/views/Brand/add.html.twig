<script>

var timeoutId = 0;
var allowInput = 0;



function doPost(){
 	if (confirm("确定提交吗？")){
		var json = {
				brand_name:$('#brand_name').val(),
				category:$('#category').combobox('getValue')
				};
		ajaxPost(
			'app_dev.php/api/brand/add',
			json,
			function(data, textStatus){
			    alert("保存成功");
				window.location.href="manage";
			},
			function(XMLHttpRequest, textStatus, errorThrown){
				alert("保存失败，请刷新重试");
			}
		);
	}
}


